{
  "name": "continuous-delivery",
  "version": "0.0.11",
  "description": "continuous-delivery example of a CLI",
  "author": "Mark C Allen @markcallen",
  "bin": {
    "continuous-delivery": "./bin/run"
  },
  "homepage": "https://github.com/markcallen/continuous-delivery",
  "license": "MIT",
  "main": "dist/index.js",
  "repository": "markcallen/continuous-delivery",
  "files": [
    "/bin",
    "/dist",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "dependencies": {
    "@oclif/core": "^2",
    "@oclif/plugin-help": "^5",
    "@oclif/plugin-plugins": "^2.4.3"
  },
  "devDependencies": {
    "@oclif/test": "^2.3.13",
    "@types/chai": "^4",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.18.23",
    "chai": "^4",
    "eslint": "^7.32.0",
    "eslint-config-oclif": "^4",
    "eslint-config-oclif-typescript": "^1.0.3",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.0",
    "mocha": "^9",
    "oclif": "^3",
    "prettier": "^2.8.7",
    "release-it": "^15.10.0",
    "shx": "^0.3.3",
    "ts-node": "^10.9.1",
    "tslib": "^2.5.0",
    "typescript": "^4.9.5"
  },
  "oclif": {
    "bin": "continuous-delivery",
    "dirname": "continuous-delivery",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins"
    ],
    "topicSeparator": " ",
    "topics": {
      "hello": {
        "description": "Say hello to the world and others"
      }
    }
  },
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "lint": "eslint . --ext .ts --config .eslintrc",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "yarn lint",
    "prepack": "yarn build && oclif manifest && oclif readme",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif readme && git add README.md",
    "prepare": "husky install",
    "prettier:fix": "prettier . --write",
    "prettier": "prettier . --check",
    "release": "release-it"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "bugs": "https://github.com/markcallen/continuous-delivery/issues",
  "keywords": [
    "oclif"
  ],
  "types": "dist/index.d.ts",
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write .",
      "eslint --config .eslintrc --fix ."
    ],
    "*.{json,md,yml}": [
      "prettier --write ."
    ]
  }
}
